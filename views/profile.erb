<div class="container main-content">

  <!-- Welcome title -->
  <div class="row">
    <div class="col-12 pull-left">  
      <h1>Welcome <%= @current_user.name %></h1>
    </div>  
  </div>

  <!-- User Picture -->
  <div class="row col-12">   

    <div class="col-md-3 justify-left"> 
      <img class="user-picture col-4 img-responsive" src="img/user.png" alt="default user">
    </div>
    
    <div class="col-md-8 col-sm-offset-1">


      <form class="col-8" method="post" action="/change-details" style="margin-top: 30px;">

        <div class="form-group">
          <label for="inputs">Name</label>
          <input class="form-control input-sm" type="text" name="user[name]">
        </div>

        <div class="form-group">
          <label for="inputdefault">Original Password</label>
          <input class="form-control" type="password" name="user[original_password]">
        </div>                 

        <div class="form-group">
          <label for="inputdefault">New Password</label>
          <input class="form-control" id="inputdefault" type="password" name="user[new_password]">
        </div>                 

        <div class="form-group">
          <div class="row">
            <div class="col-sm-6 col-sm-offset-3">
              <button type="submit" value="change-details" class="form-control btn btn-register"/>Change Details</button>
            </div>
          </div>
        </div>

      </form>
    </div>
  </div>
</div>













